#!/hint/bash

pkgname=llvm-bolt
pkgver=21.1.1
pkgrel=4
pkgdesc='A post-link optimizer developed to speed up large applications'
url="https://github.com/llvm/llvm-project/tree/main/bolt"
license=('custom:Apache-2.0 with LLVM-Exception')
arch=('x86_64')
depends=('gcc-libs' 'ncurses' 'zlib' 'zstd')
makedepends=('clang' 'cmake' 'llvm' 'llvm-libs' 'python' 'ninja' 'mold')
options=('!lto' '!debug')
source=("https://github.com/llvm/llvm-project/releases/download/llvmorg-$pkgver/llvm-project-$pkgver.src.tar.xz"{,.sig})
sha512sums=(
    'a120895e75942d848cc763fd1cb4aeb184e9d4509d69064e8e3f5679fbeb09c73bf916e33d04b842778537d2331067ec9190e0ad75d591d3ba57871770e19bce'
    'SKIP'
)
validpgpkeys=('474E22316ABF4785A88C6E8EA2C794A986419D8A'  # Tom Stellard <tstellar@redhat.com>
              'D574BD5D1D0E98895E3BF90044F2485E45D59042') # Tobias Hieta <tobias@hieta.se>

prepare() {
    mkdir -p build
}

build() {
    cmake -B build -G Ninja \
        -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_C_COMPILER=clang \
        -DCMAKE_CXX_COMPILER=clang++ \
        -DLLVM_INSTALL_UTILS=ON \
        -DLLVM_BUILD_DOCS:BOOL=OFF \
        -DBUILD_SHARED_LIBS:BOOL=OFF \
        -DLLVM_LINK_LLVM_DYLIB:BOOL=OFF \
        -DLLVM_USE_PERF:BOOL=ON \
        -DLLVM_USE_LINKER=mold \
        -DLLVM_EXTERNAL_LIT=/usr/bin/lit \
        -DLLVM_ENABLE_PROJECTS="bolt" \
        -DLLVM_TARGETS_TO_BUILD="X86" \
        -DLLVM_PARALLEL_LINK_JOBS=3 \
        llvm-project-$pkgver.src/llvm
    ninja -C build bolt
}

package () {
    DESTDIR="$pkgdir" ninja -C build install-bolt
}
